{% extends 'base1.html.twig' %}

{% block title %}Donation
{% endblock %}

{% block body %}
	<h1>
		<center>Donations</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Montant</th>
					<th>Date</th>
					<th>carte_credit</th>
					<th>message</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for don in dons %}
					<tr>
						<td>{{ don.id}}</td>
						<td>{{ don.montant}}</td>
						<td>{{ don.dateDon ? don.dateDon|date('Y-m-d') : ''}}</td>
						<td>{{ don.cartecredit}}</td>
						<td>{{ don.message}}</td>
						<td>
							<a href="{{ path('app_don_show', {'id': don.id}) }}">show</a>
							<a href="{{ path('app_don_edit', {'id': don.id}) }}">edit</a>
							{{include('don/_delete_form.html.twig')}}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_don_new') }}">Create new</a>
	{% endblock %}
